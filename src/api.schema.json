        "/cases/{date}/count": {
            "get": {
                "description": "List all records in the database on the selected day, grouped by country and separated by variant.",
                "operationId": "variantsCount",
                "parameters": [
                    {
                        "name": "date",
                        "in": "path",
                        "schema": {
                            "type": "string",
                            "example": "2021-05-17"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Data requested successfully!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "count_cases": {
                                                "type": "number",
                                                "example": "1"
                                            },
                                            "variant": {
                                                "type": "string",
                                                "example": "Iota"
                                            },
                                            "location": {
                                                "type": "string",
                                                "example": "Bosnia and Herzegovina"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "204": {
                        "description": "No datas available!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "No Content"
                                        },
                                        "status": {
                                            "type": "number",
                                            "example": "204"
                                        }
                                    }
                                },
                                "example": {
                                    "status": "204",
                                    "message": "No datas available!"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Internal Server Error"
                                        },
                                        "status": {
                                            "type": "number",
                                            "example": "500"
                                        }
                                    }
                                },
                                "example": {
                                    "status": "500",
                                    "message": "Internal Server Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/cases/{date}/cumulative": {
            "get": {
                "description": "List all records in the database, returning the sum of cases recorded accordingly from the beginning of the dataset to the selected date, grouped by country and separated by variant.",
                "operationId": "variantsCumulative",
                "parameters": [
                    {
                        "name": "date",
                        "in": "path",
                        "schema": {
                            "type": "string",
                            "example": "2021-05-17"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Data requested successfully!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "sum_cases": {
                                                "type": "number",
                                                "example": "21"
                                            },
                                            "variant": {
                                                "type": "string",
                                                "example": "Kappa"
                                            },
                                            "location": {
                                                "type": "string",
                                                "example": "Bosnia and Herzegovina"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "204": {
                        "description": "No datas available!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
